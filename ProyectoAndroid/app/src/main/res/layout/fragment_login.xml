<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginFragment"
    android:gravity="center"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <!-- Correo electrónico -->
    <TextView
        android:id="@+id/textocorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo electrónico:"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/verde_guay">
    </TextView>

    <!-- TextInputLayout para el correo electrónico -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_all_corners"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/inputemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_all_corners"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:drawableStart="@drawable/ic_correo"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contraseña -->
    <TextView
        android:id="@+id/textocontraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textColor="@color/verde_guay"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"/>

    <!-- TextInputLayout para la contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_all_corners"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/inputpassword"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_all_corners"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:drawableStart="@drawable/ic_llave"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
